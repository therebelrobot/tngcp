{
  "collectCoverageFrom": ["client/**/*.{ts,tsx}", "server/**/*.{ts,tsx}"],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "moduleFileExtensions": ["ts", "tsx", "json", "js"],
  "moduleNameMapper": {
    "^__(.*)$": "<rootDir>/server/$1",
    "^_(.*)$": "<rootDir>/client/$1",
    "^mocks(.*)$": "<rootDir>/mocks/$1"
  },
  "testEnvironment": "node",
  "testPathIgnorePatterns": [
    "<rootDir>[/\\\\](.next|.vscode|@types|scripts|public|pages|node_modules)[/\\\\]"
  ],
  "testRegex": "\\.test\\.(ts|tsx)$"
}
